{
  "name": "backend",
  "main": "app.ts",
  "module": "dist/index.ts",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production bun run src/server.ts",
    "dev": "NODE_ENV=development nodemon --watch src --exec bun run src/server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "build:ui": "rm -rf dist && cd ../frontend && bun run build && cp -r dist ../backend"
  },
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@babel/preset-env": "7.26.0",
    "@babel/preset-typescript": "7.26.0",
    "@types/bun": "latest",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/supertest": "6.0.2",
    "@types/validator": "13.12.2",
    "babel-jest": "29.7.0",
    "eslint": "9.15.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "jest": "29.7.0",
    "mongodb-memory-server": "10.1.2",
    "nodemon": "3.1.7",
    "prettier": "3.3.3",
    "supertest": "7.0.0"
  },
  "peerDependencies": {
    "typescript": "5.0.0"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.21.1",
    "mongoose": "8.8.1",
    "nanoid": "3",
    "validator": "13.12.0"
  }
}

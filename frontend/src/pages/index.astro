---
import '@/styles/global.css'

import Layout from '@/layouts/Layout.astro'
import ShortenerPage from '@/components/ShortenerPage'

const apiUrl = "/api/"
---

<Layout title="✂️ Condensr">
  <main class="
    max-w-[1200px] h-screen m-auto overflow-hidden 
    flex flex-col justify-center items-center gap-20 px-5 xl:px-0
  ">
    <div class="w-full flex items-center justify-center">
      <img src="/condensr_logo.jpg" alt="condensr logo" draggable="false" />
    </div>
    <ShortenerPage client:load apiUrl={apiUrl} />
    <div class="w-full flex items-center justify-center gap-3">
      <p class="text-secondary"><span class="mr-2">✂️</span>Shorten</p>
      <p class="text-secondary"><span class="mr-2">🔗</span>Share</p>
      <p class="text-secondary"><span class="mr-2">🎯</span>Simplify</p>
    </div>
    <div class="absolute bottom-0 mb-10 text-secondary text-sm text-balance">
      <span>Made with ♥️ by @jaresdev</span>
      <span class="mx-1 md:mx-3">⎯</span>
      <a 
        href="https://jaresdev.com" 
        target="_blank"
        class="underline"
      >
        jaresdev.com
      </a>
    </div>
  </main>
</Layout>
